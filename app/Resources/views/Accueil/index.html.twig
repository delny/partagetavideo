{% extends 'base.html.twig' %}

{% block title %}
    Accueil Partage tes videos
{% endblock %}

{% block content %}
    <h1>Partage de vid&eacute;os</h1>
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
        <h2>Liste des vid&eacute;os</h2>
    {% if videos %}
        {% for video in videos %}
            <div class="panel panel-primary {% if video.isActive == 0 %}unactive{% endif %}">
                <div class="panel-heading titlevideo">
                    <h3 class="panel-title">
                        <a href="#">{{ video.user.username }}</a> -- {{ video.titre }}
                    </h3>
                    {% if app.user and app.user == video.user %}
                        <div class="deletevideo">
                            <a href="#" onclick="confirmdelete({{ video.id }});return false;" >
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </div>
                    <div class="modifvideo">
                        <a href="#">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </div>
                    {% endif %}
                </div>
                <div class="panel-body miniature">
                    <figure>
                        <img src="http://img.youtube.com/vi/{{ video.urlNumber }}/0.jpg" alt="miniature" title="miniature"/>
                        <figcaption>Voir la vid&eacute;o : <a href="{{ path('app_view_video', {'id':video.id }) }}">{{ video.titre }}</a></figcaption>
                    </figure>
                    <a href="{{ path('app_view_video',{'id':video.id}) }}">
                        <span class="glyphicon glyphicon-play logo_play"></span></a>
                </div>
                <div class="panel-footer">
                    <p>nombres de vues : {{ video.count }} -- nombres de vues unique : nb_vues_unique</p>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p>Aucune Vid&eacute;o !</p>
    {% endif %}
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="col-lg-12 col-xs-12">
            <h2>Top Utilisateurs</h2>
        </div>
        <div class="col-lg-12 col-xs-12">
            <h2>Top Vid&eacute;os</h2>
        </div>
    </div>
{% endblock %}